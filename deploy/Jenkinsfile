pipeline {
    agent any
    environment {
      ANSIBLE_CONFIG="${WORKSPACE}/deploy/ansible.cfg"
    }

  stages {
    stage('Initial Cleanup') {
      steps{
        dir("${WORKSPACE}") {
          deleteDir()
        }
      }
    }

    stage('SCM Checkout'){
      steps{
       git 'https://github.com/brpo01/ansible-config-mgt.git'
      }
    }

    // stage('Update ansible.cfg'){
    //   steps{
    //     sh ('sudo sed -i -e "/roles_path = \\/[a-z]*\\/*/a\\roles_path = $cpath" -e "/roles_path = \\/[a-z]*\\/*/d" /etc/ansible/ansible.cfg')
    //   }
    // }

    stage('Execute Ansible Playbook'){
      steps{
        ansiblePlaybook credentialsId: 'private-key', disableHostKeyChecking: true, installation: 'ansible', inventory: 'inventory/dev.yml', playbook: 'playbooks/site.yml'
      }
    }

    stage('Clean Workspace'){
      steps{
        cleanWs()
      }
    }
  }
}